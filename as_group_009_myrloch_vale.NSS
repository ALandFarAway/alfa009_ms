// Created by Riotnrrd for ALFA 4/2012
void main() {
// Myrloch Vale: 50% temperate clear, 50% mixed fey
// Created by Riotnrrd for ALFA 4/2012
	int nRoll = d100();
	int i;

	if (nRoll <= 50) ACR_SpawnGroup("temperate_clear");
	else
	// d2 pixies, d6 + 3 Jermlaine, or d2 brownies
	{
		int nType = d3();
		if (nType == 1) {
			int nPixies = d2();
			for (i = 0; i < nPixies; i++) ACR_SpawnObject("abr_cr_fy_pixie", OBJECT_TYPE_CREATURE);
		}
		else if (nType == 2) {
			int nJermlaine = d6() + 3;
			for (i = 0; i < nJermlaine; i++) ACR_SpawnObject("abr_cr_fy_jermlaine", OBJECT_TYPE_CREATURE);			
		}
		else {
			int nBrownies = d2();
			for (i = 0; i < nBrownies; i++) ACR_SpawnObject("abr_cr_fy_brownie", OBJECT_TYPE_CREATURE);
		}
	}
}