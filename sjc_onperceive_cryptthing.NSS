void main()
{
    ACR_CreatureOnPerception();

    // Custom code goes here.
	
	object oPerceived = GetLastPerceived();
	if (GetIsDM(oPerceived) == TRUE) return; 
	
	if (GetLocalInt(OBJECT_SELF, "CryptThingCast") == 0)
		{ActionCastFakeSpellAtObject(SPELL_MASS_DEATH_WARD, oPerceived);
		SetLocalInt(OBJECT_SELF, "CryptThingCast", 1);
		object oTarget = GetFirstObjectInShape(SHAPE_SPHERE, 15.0f, GetLocation(oPerceived), FALSE, OBJECT_TYPE_CREATURE);  
		while (GetIsObjectValid(oTarget))
			{
			if (WillSave(oTarget, 17) == 0)
			{
			int iWaypointNumber = d6();
			string sWaypointNumber = IntToString(iWaypointNumber);
			AssignCommand(oTarget, JumpToLocation(GetLocation(GetObjectByTag("u0303_ctteleport_" + sWaypointNumber))));
			}
			oTarget = GetNextObjectInShape(SHAPE_SPHERE, 15.0f, GetLocation(oPerceived), FALSE, OBJECT_TYPE_CREATURE);
			}
		}
}