void main() {
	object oClicker = GetClickingObject();
	object oTargetDoor = GetTransitionTarget(OBJECT_SELF);
	string sTargetString = GetTag(oTargetDoor);
	switch(GetLocalInt(GetModule(), "ROBYN_STATE"))
	{
		case 1:
			sTargetString += "_bat";
			oTargetDoor = GetWaypointByTag(sTargetString);
			break;
		case 2:
			sTargetString += "_brd";
			oTargetDoor = GetWaypointByTag(sTargetString);
			break;
		default:
			oTargetDoor = GetWaypointByTag(sTargetString);
			break;
	}
	location lLoc = GetLocation(oTargetDoor);
	AssignCommand(oClicker, JumpToObject(oTargetDoor));
	ACR_SetLoadingScreen(oClicker);
}