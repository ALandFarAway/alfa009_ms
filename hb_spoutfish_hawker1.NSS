//This portion of the script controls the one liners
//Change the int nRand to vary the frequency of speech. Currently this is
//set to 4 =  1 in 4 times speak.
//Change the test within "" in the case statements listed below the line "switch (nRand)"
//to change the one liners the blacksmith speaks
void NpcKerenSpeak (int nSpeak)
{
int nRand = Random (4); //change the integer to vary the frequency of speech
    {switch (nSpeak)
        {
        default:
        break;
        case 1:
            {switch (nRand)
                {
                case 0:
                {switch (Random(4))
                    {
                    case 0:
                    SpeakString ( "Come wet your whistle at the Spouting Fish.");
                    break;
                    case 1:
                    SpeakString (" Roast Fowl, Fresh Bread and Sausgages to fill you up.");
                    break;
                    case 2:
                    SpeakString ( "The Spouting Fish is the best place to rest your weary feet and get a Drink.");
                    break;                    
                    case 3:
                    SpeakString ( "Get your  Ale, Wine and Zzar at the Spouting Fish Today.");
                    break;                                                              
                    }
                }
                break;
                default:
                break;
                }
            }
        }
    }
}