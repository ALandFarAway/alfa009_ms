void main()
{
    ACR_CreatureOnDamaged();

    // Custom code goes here.
	location lLocation = GetLocation(GetObjectByTag("ud0104_groundburst"));	
	if (GetLocalInt(OBJECT_SELF, "HULK_SAD") == 0)
	{
	effect eEffect = EffectNWN2SpecialEffectFile("sjc_groundbursts");
	ApplyEffectAtLocation( 0, eEffect, lLocation);
	CreateObject(OBJECT_TYPE_CREATURE, "abr_cr_ab_umberhulk", lLocation, TRUE);
	SetLocalInt(OBJECT_SELF, "HULK_SAD", 1);
	}
}