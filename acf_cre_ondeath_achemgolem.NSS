void main()
{
    ACR_CreatureOnDeath();

    // Custom code goes here.
	  // Get the creature who triggered this event.
    object oPC = GetLastKiller();

    // We are really interested in the ultimate master of the killer.
    while ( GetMaster(oPC) != OBJECT_INVALID )
        oPC = GetMaster(oPC);

    // Have us cast Cloudkill.
    ActionCastSpellAtLocation(SPELL_CLOUDKILL, GetLocation(OBJECT_SELF), METAMAGIC_ANY, TRUE, PROJECTILE_PATH_TYPE_DEFAULT, TRUE);
}
