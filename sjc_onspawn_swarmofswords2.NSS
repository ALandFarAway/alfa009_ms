void main()
{
    ACR_CreatureOnSpawnIn();

    // Custom code goes here.
	object oSound = GetNearestObjectByTag("sjc_s_flyingswords");
	SoundObjectSetVolume(oSound, 90);
	effect eAOE = EffectAreaOfEffect(12, "sjc_onenter_swarmofswords", "sjc_onhb_swarmofswords2", "****");
	ApplyEffectToObject(DURATION_TYPE_PERMANENT, eAOE, OBJECT_SELF);
}