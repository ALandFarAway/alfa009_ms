	SetLocalString(OBJECT_SELF,"X2_SPECIAL_COMBAT_AI_SCRIPT","mje_ude_patrol_cend");

    ActionDoCommand(SignalEvent(OBJECT_SELF, EventUserDefined(5001)));
}